<!-- SearchResults.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Medicine Search Results</title>
  <!-- Include Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header class="bg-primary">
    <h1 class="text-white">Medicine Index</h1>
    <!-- Include your navigation links if needed -->
  </header>
  <div class="container mt-3">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Medicine </th>
          <th scope="col">Price</th>
          <th scope="col">Category</th>
          <th scope="col">Amount</th>
          <th scope="col">Action</th>
          <!-- Add other table headers based on your data -->
        </tr>
      </thead>
      <tbody>
        <%- include('partials/_tableRows', {medicines}) %>
      </tbody>
    </table>
  </div>
  <!-- Include Bootstrap JS and other scripts if needed -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
